<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.holanda.bilicacies">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/new_app_icon_white_bg_round"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/new_app_icon_white_bg_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplication"
        android:usesCleartextTraffic="true">
        <activity android:name=".Activities.act_New_Password"></activity>
        <activity android:name=".Activities.act_Password_Recovery" />

        <service
            android:name=".Services.MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <activity android:name=".Activities.act_Get_Date_Delivery_Fee" />
        <activity android:name=".Activities.act_Order_Denial_Reason" />
        <activity android:name=".Activities.act_Order_Tracker_Proper" />
        <activity android:name=".Activities.act_conversations_proper" />
        <activity android:name=".Activities.act_Order_Tracker_List" />
        <activity android:name=".Activities.act_Conversations_List" />
        <activity android:name=".Activities.act_Password_Confirmation" />
        <activity android:name=".Activities.act_Cart_View" />
        <activity android:name=".Activities.act_Product_per_Category_User" />
        <activity android:name=".Activities.act_Single_Photo_Fullscreen" />
        <activity android:name=".Activities.act_Profile_Preview" />
        <activity android:name=".Activities.act_Buyer_Product_View" />
        <activity android:name=".Activities.act_Photo_Product_Fullscreen" />
        <activity android:name=".Activities.act_Product_Preview_Seller_Perspective" />
        <activity android:name=".Activities.act_Selling_Products_View" />
        <activity android:name=".Activities.act_Upload_Product_Photos" />
        <activity android:name=".Activities.act_Add_Product_Form" />
        <activity android:name=".Activities.act_Reg_Phone_Verification" />
        <activity android:name=".Activities.act_Registration" />
        <activity
            android:name=".Activities.act_Login"
            android:label="@string/login_label" />
        <activity
            android:name=".Activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/splashScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>